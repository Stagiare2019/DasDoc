{% extends "base+nav.html.twig" %}

{# 
	Ce template affiche le formulaire d'ajout d'un utilisateur
#}

{% block body %}
<div class="container">
	{# Cette div sert Ã  espacer le form et le nav #}
	<div class="mt-5 mb-5"></div>

	{{ form_start(form) }}

	{{ form_row(form.email, {'label': "Email"}) }}

	{{ form_row(form.password, {'label': "Mot de passe"}) }}

	{{ form_row(form.confirm_password, {'label': "Confirmer mot de passe"}) }}

	{# Bouton d'ajout #}
	<div class="text-center">
		<button class="btn btn-success" type="submit">Ajouter</button>
	</div>

	{{ form_end(form) }}
</div>
{% endblock %}
